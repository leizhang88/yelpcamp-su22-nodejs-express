<% layout("layouts/boilerplate") %>

    <h1>Campgrounds</h1>
    <div>
        <a href="/campgrounds/new">Add campground</a>
    </div>
    <ul>
        <% for (let campground of campgrounds) { %>
            <div class="card mb-2">
                <div class="row">
                    <div class="col-md-4">
                        <img class="img-fluid my-4" src="<%=campground.images[0].url%> ">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <div class="card-title">
                                <h5>
                                    <a href="/campgrounds/<%=campground._id%>" class="text-decoration-none">
                                        <%= campground.title %>
                                    </a>
                                </h5>
                                <span><small class="text-muted">
                                        <%=campground.location%>
                                    </small></span>
                            </div>
                            <p class="card-text">
                                <%=campground.description%>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
    </ul>